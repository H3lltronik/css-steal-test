{
  "name": "Vue extension template",
  "version": "1.0.0",
  "author": "H3lltronik",
  "description": "A cool extension",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "manifest_version": 3,
  "action": {
    "default_title": "Coolest extension",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser.js"],
      "css": ["css/browser.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
